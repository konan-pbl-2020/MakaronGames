<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3F1B1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".QuizEnd">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/haikei2"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="スコア"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="3 / 5"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="↓ニックネームを入力してね↓"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--    <TextView-->
    <!--        android:id="@+id/totalScoreLabel"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="トータルスコア : 333"-->
    <!--        android:textSize="20sp"-->
    <!--        android:layout_marginTop="60dp"/>-->

    <Button
        android:id="@+id/tweet"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:onClick="returnTop"
        android:text="結果を公式アカウントでツイート"
        android:textSize="18sp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:onClick="returnTop"
        android:text="もどる"
        android:textSize="18sp" />

</LinearLayout>